<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="201dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/giacchuyen" />


    <RatingBar
        android:id="@+id/Ratebar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:rating="3"


        app:layout_constraintStart_toStartOf="@+id/txName"
        app:layout_constraintTop_toBottomOf="@+id/txName"  />
    <TextView
        android:id="@+id/txName"
        android:layout_width="223dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Cáp chuyển từ Cổng  USB sang PS2..."
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img"
        app:layout_constraintTop_toBottomOf="@+id/img" />

    <TextView
        android:id="@+id/txPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="69.900 đ"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/Ratebar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Ratebar"
        app:layout_constraintTop_toBottomOf="@+id/Ratebar" />

    <TextView
        android:id="@+id/txPeopleRate"
        android:layout_width="25dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="(15)"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/Ratebar"
        app:layout_constraintStart_toEndOf="@+id/Ratebar"
        app:layout_constraintTop_toTopOf="@+id/Ratebar"
        app:layout_constraintVertical_bias="0.666" />

    <TextView
        android:id="@+id/txtReducePercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="-39%"
        app:layout_constraintBottom_toBottomOf="@+id/txPrice"
        app:layout_constraintStart_toEndOf="@+id/txPrice"
        app:layout_constraintTop_toTopOf="@+id/txPrice"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>